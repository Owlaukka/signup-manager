{
  "name": "signup-manager",
  "version": "0.0.1",
  "description": "API to help organizers of events to handle signups to those events and get useful information about those signups and users.",
  "main": "dist/server.js",
  "author": "Olli Laukkanen",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "prestart": "yarn run build",
    "start": "cross-env NODE_ENV=production node --es-module-specifier-resolution=node .",
    "dev": "cross-env NODE_ENV=development concurrently \"tsc -w\" \"nodemon --es-module-specifier-resolution=node dist/server.js\"",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx --report-unused-disable-directives"
  },
  "dependencies": {
    "apollo-server-koa": "^2.19.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "graphql": "^15.4.0",
    "koa": "^2.13.0",
    "mongoose": "^5.10.11"
  },
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/mongoose": "^5.7.37",
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.5"
  }
}
